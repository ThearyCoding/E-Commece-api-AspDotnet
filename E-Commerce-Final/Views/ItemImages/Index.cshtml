@model IEnumerable<E_Commerce_Final.Models.ItemImage>

@{
    ViewData["Title"] = "Index";
    Layout = "ItemImagesController";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemImageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemImageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemImageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
